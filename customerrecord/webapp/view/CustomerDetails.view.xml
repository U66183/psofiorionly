<mvc:View
    controllerName="com.pso.customerrecord.controller.CustomerDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center"
        showNavButton="true"
        navButtonPress="onBack"
        enableScrolling="false"
    >
        <content>
            <Panel
                id="idpanel"
                expanded="true"
                expandable="false"
                height="600px"
                visible='true'
            >
                <core:Fragment
                    fragmentName="com.pso.customerrecord.fragment.CreateChildFloc"
                    type="XML"
                />
            </Panel>

            <Panel
                id="idpanel2"
                expanded="true"
                expandable="false"
                height="600px"
                visible="false"
            >
                <core:Fragment
                    fragmentName="com.pso.customerrecord.fragment.DisplayChildFloc"
                    type="XML"
                />
            </Panel>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar01">
                <ToolbarSpacer id="_IDGenToolbarSpacer01" />
                <Button
                    id="_IDButtonCreateRecord"
                    type="Negative"
                    text="Create Record"
                    icon="sap-icon://create"
                    press="createCustomerDetails"
                    visible="false"
                />

                <Button
                    id="_IDButtonEditRecord"
                    type="Neutral"
                    text="Edit Record"
                    icon="sap-icon://edit"
                    press="onEditCustomerAttribute"
                    visible="false"
                />
                <Button
                    id="_IDGenButtonCreateSp"
                    type="Negative"
                    text="Create Specials"
                    icon="sap-icon://create"
                    press="onCreateSpecials"
                    visible="false"
                />
                <Button
                    id="_IDGenButtonDisplaySp"
                    type="Accept"
                    text="Display Specials"
                    icon="sap-icon://display"
                    visible="false"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
