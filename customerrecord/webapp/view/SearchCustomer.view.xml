<mvc:View controllerName="com.pso.customerrecord.controller.SearchCustomer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.m.upload"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:f="sap.f"
    xmlns:svm="sap.ui.comp.smartvariants">
    <Page id="page" title="{i18n>title}" titleAlignment="Center" enableScrolling="true">
 
        <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
            <!-- <f:title>
<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
<f:heading>
<Title id="_IDGenTitle1" text="Material Documents"/>
</f:heading>
</f:DynamicPageTitle>
</f:title> -->
            <f:title>
                <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                    <f:heading>
                        <svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
                    </f:heading>
                    <f:expandedContent>
                        <!-- <Label id="expandedLabel" text="No filters active" /> -->
                    </f:expandedContent>
                    <f:snappedContent>
                        <!-- <Label id="snappedLabel" text="No filters active" /> -->
                    </f:snappedContent>
                </f:DynamicPageTitle>
            </f:title>
            <!--  DynamicPage Header  -->
            <f:header>
                <f:DynamicPageHeader id="_IDGenDynamicPageHeader1">
                    <f:content>
                        <fb:FilterBar id="_IDGenFilterBar1" persistencyKey="myPersKey" useToolbar="false" search="fetchItems">
                            <fb:filterGroupItems>
                                <!-- <fb:FilterGroupItem id="_IDGenFilterGroupItem1" groupName="G1" groupTitle="Group1" name="C" label="{i18n>city}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idcity" showValueHelp="false" type="Text" />
                                    </fb:control>
                                </fb:FilterGroupItem> -->
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem2" groupName="G1" groupTitle="Group1" name="Customer Name" label="{i18n>Fcutname}" visibleInFilterBar="true" >
                                    <fb:control>
                                        <Input id="idcustomer" change="onchange" showValueHelp="false" valueHelpRequest="onCustomerHelpRequested" maxLength="40"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem3" groupName="G1" groupTitle="Group1" name="Mailing Name" label="{i18n>FMailingname}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idMailingname" showValueHelp="false" maxLength="10"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem4" groupName="G2" groupTitle="Group2" name="Street Address" label="{i18n>FStreetAdd}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idStreetAdd" showValueHelp="false" maxLength="60"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem5" groupName="G2" groupTitle="Group2" name="Street Number" label="{i18n>FStreetNo}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idStreetNo" showValueHelp="false" maxLength="10"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem1" groupName="G2" groupTitle="Group2" name="City" label="{i18n>Fcity}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idCity" showValueHelp="false" maxLength="40"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem6" groupName="A" name="Zip Code" label="{i18n>FZipcod}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idzipcode" showValueHelp="false" maxLength="10"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem7" groupName="A" name="No Of Line" label="{i18n>FNumberoflines}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idNoofline" showValueHelp="false" maxLength="10"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem8" groupName="A" name="Service Center" label="{i18n>Fsrvcenter}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idsrvcenter" showValueHelp="false" maxLength="65"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem9" groupName="A" name="Cable No" label="{i18n>Fcableno}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idcableno" showValueHelp="false" maxLength="60"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem10" groupName="A" name="PS Wiring Diagram" label="{i18n>Fpswidigram}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idPswdigram" showValueHelp="false" maxLength="225"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem11" groupName="A" name="Primery Service Rep" label="{i18n>Fprimeryrvrep}" visibleInFilterBar="true">
                                    <fb:control>
                                        <ComboBox id="idPrimarySRep" items="{path: 'dropDownJsonModel>/DropdownData', sorter: { path: 'device' }, filters: [
                                                {path: 'desc', operator: 'EQ', value1: 'PRIMARY SERVICE REP'}]}" >
                                            <core:Item id="_IDGenItem1" key="{dropDownJsonModel>value}" text="{dropDownJsonModel>value}" />
                                        </ComboBox>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem12" groupName="A" name="Account Rep" label="{i18n>Faccountrp}" visibleInFilterBar="true">
                                    <fb:control>
                                    <Input id="idAcRep" showValueHelp="false" maxLength="40"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem13" groupName="A" name="Substation" label="{i18n>Fsustatoin}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idSubstation" showValueHelp="false" maxLength="65"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem14" groupName="A" name="Service Sketch No" label="{i18n>Fsrvsktchno}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idSrvSketchno" showValueHelp="false" maxLength="18"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem id="_IDGenFilterGroupItem15" groupName="A" name="Circuit" label="{i18n>Fcircuit}" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="idCircuit" showValueHelp="false" maxLength="225"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                            </fb:filterGroupItems>
                        </fb:FilterBar>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <!-- <ScrollContainer id="_IDGenScrollContainer1" width="auto" vertical="false" horizontal="true"> -->
                <Table sticky="ColumnHeaders,HeaderToolbar,InfoToolbar" id="idCustomerListTable" items="{oSearchCustomerJModel>/CustomersData}" growing="true" growingThreshold="15" alternateRowColors="true">
                    <headerToolbar>
                        <Toolbar id="_IDGenToolbar1">
                            <content>
                                <!-- <core:Icon id="_IDGenIcon1" src="sap-icon://border"></core:Icon> -->
                                <Label id="idlblNoofRec" text="{i18n>noOfRecords}"></Label>
                                <Text id="idNoofRec" />
                                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                                <!-- <Button id="idcreateButton" text="Create Child" type="Emphasized"  width="auto" press="onCreateChield" />
                                <Button id="idDisplayButton" text="Display Child" type="Emphasized"  width="auto" press="onDisplayChield" />
                                <Button id="idDisplayButtonltd" icon="sap-icon://SAP-icons-TNT" text="Limited Display Child" type="Emphasized"  width="auto" press="onDisplayChildLtd" /> -->
                               
                                <SearchField id="idValidReportsSearch" width="30%" class="sapUiSmallMargin" liveChange="handleTableSearch" placeholder="{i18n>searchfieldText1}"/>
                                <Button id="idValidationReportsTableFilter" text="" type="Default" icon="sap-icon://filter" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onTableColumnFilterButtonPress" tooltip="{i18n>columnFilters}"/>
                                <Button id="idValidationReportsTableFilterRemove" text="" type="Default" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onValidReportsColumnFilterRemove" tooltip="{i18n>removeColumnFilters}"/>
                                <Button id="idTableSort" text="" type="Default" icon="sap-icon://sort" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onValidReportsTableSorting"/>
                                <Button id="idValidationReportsTableExport" text="" type="Default" icon="sap-icon://excel-attachment" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onValidReportsTableExport"/>
                            </content>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <!-- <Column id="_IDGenColumn1" minScreenWidth="" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText1" text="{i18n>city}"/>
                        </Column> -->
 
                        <Column id="_IDGenColumn2" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText2" text="{i18n>Fcutname}"/>
                        </Column>
                        <!-- <Column id="_IDGenColumn3" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText3" text="{i18n>FMailingname}"/>
                        </Column> -->
                        <Column id="_IDGenColumn4" minScreenWidth="1000px" width="14rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText4" text="{i18n>FStreetAdd}"/>
                        </Column>
                        <!-- <Column id="_IDGenColumn5" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText5" text="{i18n>FStreetNo}"/>
                        </Column> -->
                        <!-- <Column id="_IDGenColumn6" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText6" text="{i18n>Fcity}"/>
                        </Column> -->
                        <!-- <Column id="_IDGenColumn7" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText7" text="{i18n>FZipcod}"/>
                        </Column> -->
                        <Column id="_IDGenColumn8" minScreenWidth="1000px" width="5rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText8" text="{i18n>FNumberoflines}"/>
                        </Column>
                        <Column id="_IDGenColumn9" minScreenWidth="1000px" width="10rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText9" text="{i18n>Fsrvcenter}"/>
                        </Column>
                        <Column id="_IDGenColumn10" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText10" text="{i18n>Fcableno}"/>
                        </Column>
                        <!-- <Column id="_IDGenColumn15" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText15" text="{i18n>Fsrvsktchno}"/>
                        </Column> -->
                        <Column id="_IDGenColumn11" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText11" text="{i18n>Fpswidigram}"/>
                        </Column>
                        <Column id="_IDGenColumn12" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText12" text="{i18n>Fprimeryrvrep}"/>
                        </Column>
                        <!-- <Column id="_IDGenColumn13" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText13" text="{i18n>Faccountrp}"/>
                        </Column> -->
                        <Column id="_IDGenColumn14" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText14" text="{i18n>Fsustatoin}"/>
                        </Column>
 
                        <!-- <Column id="_IDGenColumn16" minScreenWidth="1000px" width="12rem" demandPopin="true" hAlign="Begin">
                            <Text id="_IDGenText16" text="{i18n>Fcircuit}"/>
                        </Column> -->
 
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press="handleSelectionChange" highlight="{= ${oSearchCustomerJModel>superior_flag} === 'X' ? 'Error' : undefined }" >
                            <!-- <customData>
                            <core:CustomData key="myCustomColor" value="{oSearchCustomerJModel>flag}" writeToDom="true"></core:CustomData>
                            </customData> -->
  
                            <cells>
                                <!-- <Text id="IDGenText1" text="{oSearchCustomerJModel>cust_name}"/>
                                <Text id="IDGenText2" text="{oSearchCustomerJModel>mail_name}"/> -->
                                <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{oSearchCustomerJModel>cust_name}" text="{= 'Mailing Name: ' + ${oSearchCustomerJModel>mail_name}}"/>
 
 
                                <!-- <Text id="IDGenText3" text="{oSearchCustomerJModel>street_name}"/>
                                <Text id="IDGenText4" text="{oSearchCustomerJModel>street_no}"/>-->
                                <!-- <Text id="IDGenText5" text="{oSearchCustomerJModel>city}"/> -->
                                <!-- <Text id="IDGenText6" text="{oSearchCustomerJModel>zip_code}"/>  -->
                                <ObjectIdentifier id="_IDGenObjectIdentifier2" title="{oSearchCustomerJModel>street_name}" text="{= 'Street No: ' + ${oSearchCustomerJModel>street_no} + ', \nCity: ' + ${oSearchCustomerJModel>city}
                                    + ', \nZip Code: ' + ${oSearchCustomerJModel>zip_code}}"/>
 
                                <!-- <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{Name}" text="{parts: [{path: 'Role', type: 'sap.ui.model.type.String'},
                                                   {path: 'Location', type: 'sap.ui.model.type.String'},
                                                   {path: 'Location', type: 'sap.ui.model.type.String'}
                                                    ],formatter: '.formatText'}"/>    -->
 
                                <Text id="IDGenText7" text="{oSearchCustomerJModel>no_of_lines}"/>
                                <Text id="IDGenText8" text="{oSearchCustomerJModel>srv_centre}"/>
                                <!-- <Text id="IDGenText9" text="{oSearchCustomerJModel>CableNo}"/>
                                <Text id="IDGenText14" text="{oSearchCustomerJModel>ServiceSketchNo}"/> -->
                                <ObjectIdentifier id="_IDGenObjectIdentifier3" title="{oSearchCustomerJModel>cable_no}" text="{= 'Service Sketch No: ' + ${oSearchCustomerJModel>sketch_no}}"/>
 
                                <Text id="IDGenText10" text="{oSearchCustomerJModel>doc_id}"/>
                                <!-- <Text id="IDGenText11" text="{oSearchCustomerJModel>PrimeryServiceRep}"/>
                                <Text id="IDGenText12" text="{oSearchCustomerJModel>AccountRep}"/> -->
                                <ObjectIdentifier id="_IDGenObjectIdentifier4" title="{oSearchCustomerJModel>psr}" text="{= 'Account Rep: ' + ${oSearchCustomerJModel>acc_rep}}"/>
 
                                <!-- <Text id="IDGenText13" text="{oSearchCustomerJModel>Substation}"/>
                                <Text id="IDGenText15" text="{oSearchCustomerJModel>Circuit}"/> -->
                                <ObjectIdentifier id="_IDGenObjectIdentifier5" title="{oSearchCustomerJModel>sub_station}" text="{= 'Circuit: ' + ${oSearchCustomerJModel>circuit}}"/>
 
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <!-- </ScrollContainer> -->
            </f:content>
        </f:DynamicPage>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <!-- <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Button id="_IDGenButton1" text="Create" type="Emphasized" press="onCreate" /> -->
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
 


